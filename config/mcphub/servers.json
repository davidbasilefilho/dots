{
  "mcpServers": {
    "context7": {
      "command": "bunx",
      "args": [
        "--bun",
        "@upstash/context7-mcp"
      ]
    },
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server"
      ]
    },
    "fetch": {
      "command": "uvx",
      "args": [
        "mcp-server-fetch"
      ]
    },
    "git": {
      "command": "uvx",
      "args": [
        "mcp-server-git"
      ]
    },
    "sequential-thinking": {
      "command": "bunx",
      "args": [
        "--bun",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "memory": {
      "command": "bunx",
      "args": [
        "--bun",
        "@modelcontextprotocol/server-memory"
      ]
    }
  }
}
